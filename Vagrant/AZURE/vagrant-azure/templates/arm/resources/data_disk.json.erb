{
  "name": "<%= name %>",
  "diskSizeGB": "<%= size_gb %>",
  "lun": <%= lun %>,
  <% if vhd_uri %>
    "vhd": {
      "uri": "<%= vhd_uri %>"
    },
    "createOption": "attach"
  <% end %>
  <% if image_uri %>
    "image": {
      // spécifie l'emplacement du disque de données vhd lors de la création de la machine virtuelle à partir de l'image utilisateur
      "uri": "<%= image_uri %>"
    },
    "createOption": "fromImage"
  <% end %>
  <% if !vhd_uri && !image_uri  %>
    "createOption": "empty"
  <% end %>
}
